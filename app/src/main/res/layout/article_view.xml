<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    android:background="@drawable/red_border"
    android:backgroundTint="#808080">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_article"
        >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@drawable/red_border">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/image_image"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_text_snippet_24"
                    android:fitsSystemWindows="true"

                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/red_border"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/view_article_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Theme"
                android:textColor="@color/tit"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_article_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Student name"
                android:textColor="@color/tit"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/view_article_student_enrollment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Student enrollment"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/tit"
                android:textSize="18sp"
                android:textStyle="normal|bold" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>